@page
@model Web.Pages.DataManagement.Business.BusinessListModel
@{
    ViewData["Title"] = "Business List";
}
@section Scripts{
    <environment include="Development">
        <script src="/js/businesslist.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/businesslist.min.js"></script>
    </environment>
}
<div class="row justify-content-center" id="app">
    <c-section title="Business List">
        <template v-slot:content>
            <c-button title="Create New" v-on:click="goToDetails(0)"></c-button>
            <div class="mt-5">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>
                                <c-input>
                                    <template v-slot:input>
                                        <input class="bg-blue-900 border-2 rounded-full" type="text" v-model="filter.Name" />
                                    </template>
                                </c-input>
                            </th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Business Name</th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <template v-for="(item, index) in items">
                            <c-tr v-bind:index="index" v-on:click="goToDetails(item.BusinessId)">
                                <template v-slot:content>
                                    <td>{{item.Name}}</td>
                                    <td>{{item.CreatedAt}}</td>
                                </template>
                            </c-tr>
                        </template>
                    </tbody>
                </table>
            </div>
        </template>
    </c-section>
</div>
