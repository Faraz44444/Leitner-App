@page "/datamanagement/business/details/{id:long}"
@model Web.Pages.DataManagement.Business.Details.BusinessDetailsModel
@{
    ViewData["Title"] = "Business Details";
}
@section Scripts{
    <environment include="Development">
        <script src="/js/businessDetails.js"></script>
        <script src="/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/businessDetails.min.js"></script>
        <script src="/js/site.min.js"></script>

    </environment>
}
    <div class="row justify-content-center" id="app" data-entity-id="@Model.EntityId">
        <c-section :title="details.BusinessId > 0 ? 'Business Details' : 'New Business'">
            <template v-slot:content>
                <c-input input-label="Name: ">
                    <template v-slot:input>
                        <input class="bg-blue-900 border-2 rounded-full" type="text" v-model="details.Name" />
                    </template>
                </c-input>
                <c-button title="Save" v-on:click="save"></c-button>
            </template>
        </c-section>
    </div>
