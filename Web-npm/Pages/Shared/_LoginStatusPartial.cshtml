@using Core.Infrastructure.Constants

@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Logout">
        <span class="text-blueGray-400">
            @User.Identities.FirstOrDefault().Claims.ToList().First(x=> x.Type == "name").Value
        </span>
        <button type="submit" class="ml-2 btn btn-link border rounded p-1 hover:bg-coolGray-700">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Login">Login</a>
}