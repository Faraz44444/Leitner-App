@using Core.Infrastructure.Constants

@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Logout">
        Welcome @User.Identities.FirstOrDefault().Claims.ToList().First(x=> x.Type == "name").Value
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Login">Login</a>
}