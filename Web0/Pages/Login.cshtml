@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{
}

<div class="containter border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.UsernameOrEmail"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="text" asp-for="Credential.UsernameOrEmail"/>
            </div>
            <span class="text-danger" asp-validation-for="Credential.UsernameOrEmail"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label  asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input class="form-control"  type="password" asp-for="Credential.Password"/>
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="Credential.RememberMe"></label>
        </div>
        <div class="form-group row">
            <div class="col-2 btn-test">
                <input type="submit" class="btn btn-primary" value="login"/>
            </div>
        </div>
    </form>
</div>
