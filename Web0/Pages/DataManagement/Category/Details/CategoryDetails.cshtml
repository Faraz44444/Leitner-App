@page "/datamanagement/category/details/{id:long}"
@model Web.Pages.DataManagement.Category.Details.CategoryDetailsModel
@{
    ViewData["Title"] = "Category Details";
}
@section Scripts{
    <environment include="Development">
        <script src="/js/categoryDetails.js"></script>
        <script src="/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/categoryDetails.min.js"></script>
        <script src="/js/site.min.js"></script>

    </environment>
}
    <div class="row justify-content-center" id="app" data-entity-id="@Model.EntityId">
        <div class="input-group text-center">
            <label>Name: </label>
            <input v-model="details.Name" />
        </div>
        <div class="input-group text-center">
            <label>Priority: </label>
            <select class="form-control form-control-sm" v-model="details.Priority" required>
                <option v-for="(item, index) in priorities" v-bind:value="item">{{item}}</option>
            </select>
        </div>
        <button type="button" class="btn btn-primary" v-on:click="save">Save</button>

    </div>
