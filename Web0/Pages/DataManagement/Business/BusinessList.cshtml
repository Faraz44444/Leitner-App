@page
@model Web.Pages.DataManagement.Business.BusinessListModel
@{
    ViewData["Title"] = "Business List";
}
@section Scripts{
<environment include="Development">
    <script src="/js/businesslist.js"></script>
</environment>
<environment exclude="Development">
    <script src="/js/businesslist.min.js"></script>
</environment>
}
<div class="row justify-content-center" id="app">
    <div class="col">
        <button type="button" class="btn btn-primary mb-2" v-on:click="goToDetails(0)">Create New</button>
        <div class="row justify-content-center" id="app">
            <div class="col">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>
                                <input class="form-control form-control-sm" type="text" placeholder="Name..." v-model="filter.Name" />
                            </th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Business Name</th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <template v-for="item in items">
                            <tr v-on:click="goToDetails(item.BusinessId)">
                                <td>{{item.Name}}</td>
                                <td>{{item.CreatedAt}}</td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>